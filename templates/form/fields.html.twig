{% block counter_widget %}
    <v-layout>
        <v-flex xs12 sm6 offset-sm3>
            {{ form_start(form) }}
            <v-card class="card-form">
                <v-container fluid class="card-form__container">
                    <v-layout align-center>
                        <v-flex xs9 offset-xs1>
                            {{ form_widget(form.name) }}
                        </v-flex>
                        <v-flex xs1>
                            <v-card-actions>
                                <v-btn id="submit-new-counter-button"
                                       fab small type="submit" color="success"
                                       disabled
                                >
                                    <v-icon dark>check</v-icon>
                                </v-btn>
                            </v-card-actions>
                        </v-flex>
                    </v-layout>
                </v-container>
            </v-card>
            {{ form_end(form) }}
        </v-flex>
    </v-layout>
{% endblock %}

{% block text_widget %}
    <v-text-field {{ block('widget_attributes') }}
            {% if value is not empty %}value="{{ value }}" {% endif %}
            label="{{ form.vars.name|capitalize }}"
    ></v-text-field>
{% endblock text_widget %}